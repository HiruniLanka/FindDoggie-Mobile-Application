<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rainbow"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:contentDescription="Back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginTop="20dp"
            android:foregroundGravity="left"
            tools:ignore="HardcodedText" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:text="Pet gellary"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginLeft="70dp"
            tools:ignore="HardcodedText" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/pet1"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/first"
                    android:contentDescription="Pet 1" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingHorizontal="8dp">
                    <TextView
                        android:id="@+id/petNameTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MIKKY"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/petDetailsTextView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Golden retriver"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/seeButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#80CAEC"
                        android:text="See more"
                        tools:ignore="DuplicateSpeakableTextCheck" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/pet2"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/second"
                    android:contentDescription="Pet 1" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingHorizontal="8dp">
                    <TextView
                        android:id="@+id/petNameTextView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BROWNY AND ROCKY"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/petDetailsTextView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mix withGermen shepherd"
                        android:textSize="16sp" />
                    <Button
                        android:id="@+id/seeButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#80CAEC"
                        android:text="See more" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/pet3"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/third"
                    android:contentDescription="Pet 1" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="8dp">
                    <TextView
                        android:id="@+id/petNameTextView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GRAY CAT"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/petDetailsTextView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Egyptian maw"
                        android:textSize="16sp"
                        tools:ignore="TextContrastCheck" />
                    <Button
                        android:id="@+id/seeButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#80CAEC"
                        android:text="See more" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/pet4"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/four"
                    android:contentDescription="Pet 4" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="8dp">
                    <TextView
                        android:id="@+id/petNameTextView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MACK"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/petDetailsTextView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="German script "
                        android:textSize="16sp" />
                    <Button
                        android:id="@+id/seeButton4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#80CAEC"
                        android:text="See more" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
